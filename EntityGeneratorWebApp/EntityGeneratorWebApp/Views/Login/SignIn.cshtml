@{
    ViewData["Title"] = "登陆";
}

@{
    var cookies = Context.Request.Cookies;
    if (cookies["PiaochongAccessToke"] == null)
    {
        <div class="mt-3">
            <div class="login-container">
                <div class="login-box">
                    <form style="padding: 15px; margin: 0 auto;">
                        <div class="row">
                            <div class="input-field col s6">
                                <select id="selectIdType">
                                    <option value="" disabled selected>请选择登陆方式</option>
                                    <option value="1">邮箱</option>
                                    <option value="2">手机号码</option>
                                    <option value="3">用户名</option>
                                </select>
                                <label>登陆方式</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="inputId" type="text" class="validate">
                                <label id="labelForId" for="inputId">账号</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="inputPassword" type="password" class="validate">
                                <label for="inputPassword">密码</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="inputIdentifyCode" type="text" class="validate" aria-label="验证码" aria-describedby="identifying_code">
                                <label for="inputIdentifyCode">验证码(区分大小写)</label>
                            </div>
                            <div class="col s6 valign-wrapper">
                                <span class="input-group-text" id="spanIdentifyCode" oncopy="return false"></span>
                            </div>
                        </div>
                        <div class="row">
                            <p class="col s12">
                                <label>
                                    <input type="checkbox"/>
                                    <span>记住我</span>
                                </label>
                            </p>
                        </div>
                        <div style="width: 100%; height: 2rem; display: flex; align-items: center; justify-content: space-between;">
                            <button type="reset" class="btn-flat">重置输入</button>
                            <button type="button" class="btn-flat">登陆遇到问题?</button>
                        </div>
                        <button type="button" class="waves-effect waves-light btn-primary btn-large mt-2" style="width: 100%;" id="buttonLogin">登陆</button>
                    </form>
                </div>
            </div>
        </div>

        <div id="modalSignResponseShow" style="height: auto;" class="modal">
            <div class="modal-content">
                <h4>登陆提示</h4>
                <p id="panelLoginResult"></p>
            </div>
            <div class="modal-footer">
                <a href="#" class="modal-close waves-effect waves-green btn-flat">关闭</a>
            </div>
        </div>
    }
    else
    {
        <p class="text-center">您已经登录!<a href="/home/index">点击此处返回主页</a></p>
    }
}
<textarea id="public_key" style="display: none;">@ViewData["PublicKey"]</textarea>
<script src="~/js/jsencrypt.js"></script>
<script src="~/js/signin.js"></script>