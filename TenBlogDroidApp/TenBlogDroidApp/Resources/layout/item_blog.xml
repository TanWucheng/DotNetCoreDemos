<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:foreground="?android:attr/selectableItemBackground"
	android:stateListAnimator="@drawable/selector_elevation"
	android:layout_margin="@dimen/card_margin"
	app:cardElevation="@dimen/dp_6"
	app:contentPadding="@dimen/dp_8"
	app:cardCornerRadius="@dimen/dp_8"
	app:cardPreventCornerOverlap="false"
	app:cardUseCompatPadding="true">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/iv_blog_picture"
			android:layout_width="@dimen/dp_48"
			android:layout_height="@dimen/dp_48"
			android:src="@drawable/icon_close"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="parent"
			app:layout_constraintBottom_toTopOf="parent"/>

		<TextView
			android:id="@+id/tv_blog_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:textSize="@dimen/sp_14"
			android:text="@string/app_name"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginTop="@dimen/dp_4"
			app:layout_constraintStart_toEndOf="@id/iv_blog_picture"
			app:layout_constraintTop_toTopOf="parent"/>

		<TextView
			android:id="@+id/tv_blog_abstract"
			android:layout_width="@dimen/dp_0"
			android:layout_height="wrap_content"
			android:lines="2"
			android:ellipsize="end"
			android:textSize="@dimen/sp_12"
			android:text="岱宗夫如何，齐鲁青未了。造化钟神秀，阴阳割昏晓。荡胸生层云，决眦入归鸟。会当凌绝顶，一览众山小。"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginEnd="@dimen/dp_4"
			android:layout_marginTop="@dimen/dp_4"
			app:layout_constraintStart_toEndOf="@id/iv_blog_picture"
			app:layout_constraintTop_toBottomOf="@id/tv_blog_title"
			app:layout_constrainedWidth="true"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="1.0"
			app:layout_constraintHorizontal_weight="1"/>

		<TextView
			android:id="@+id/tv_blog_publish_fa"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="&#xf133;发表于 "
			android:textSize="@dimen/sp_12"
			android:textColor="@color/colorAccent"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginTop="@dimen/dp_4"
			app:layout_constraintStart_toEndOf="@id/iv_blog_picture"
			app:layout_constraintTop_toBottomOf="@id/tv_blog_abstract"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/tv_blog_published"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_12"
			android:textColor="@color/colorAccent"
			android:layout_marginTop="@dimen/dp_4"
			app:layout_constraintStart_toEndOf="@id/tv_blog_publish_fa"
			app:layout_constraintTop_toBottomOf="@id/tv_blog_abstract"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/tv_category_divider"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_12"
			android:text="|"
			android:textColor="@color/colorAccent"
			android:layout_marginTop="@dimen/dp_4"
			android:layout_marginStart="@dimen/dp_8"
			app:layout_constraintStart_toEndOf="@id/tv_blog_published"
			app:layout_constraintTop_toBottomOf="@id/tv_blog_abstract"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/tv_blog_category_fa"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="&#xf114; "
			android:textSize="@dimen/sp_12"
			android:textColor="@color/colorAccent"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginTop="@dimen/dp_4"
			app:layout_constraintStart_toEndOf="@id/tv_category_divider"
			app:layout_constraintTop_toBottomOf="@id/tv_blog_abstract"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/tv_blog_category"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_12"
			android:textColor="@color/colorAccent"
			android:layout_marginTop="@dimen/dp_4"
			app:layout_constraintStart_toEndOf="@id/tv_blog_category_fa"
			app:layout_constraintTop_toBottomOf="@id/tv_blog_abstract"
			app:layout_constraintBottom_toBottomOf="parent"/>

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>