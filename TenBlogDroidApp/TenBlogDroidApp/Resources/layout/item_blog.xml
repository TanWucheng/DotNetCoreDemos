<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:foreground="?android:attr/selectableItemBackground"
	android:stateListAnimator="@drawable/selector_elevation"
	android:layout_margin="@dimen/card_margin"
	android:background="@color/colorDivider"
	app:cardCornerRadius="@dimen/dp_8"
	app:cardPreventCornerOverlap="false"
	app:cardUseCompatPadding="true">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/iv_avatar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@mipmap/landscape_1"
			android:contentDescription="@string/app_name"
			android:adjustViewBounds="true"
			android:scaleType="fitXY"
			app:layout_constraintStart_toEndOf="parent"
			app:layout_constraintEnd_toStartOf="parent"/>

		<TextView
			android:id="@+id/tv_blog_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="@dimen/sp_14"
			android:text="@string/app_name"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginBottom="@dimen/dp_8"
			app:layout_constraintStart_toEndOf="@id/iv_avatar"
			app:layout_constraintBottom_toBottomOf="@id/iv_avatar"/>

		<TextView
			android:id="@+id/tv_blog_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/dp_4"
			android:text="岱宗夫如何，齐鲁青未了。造化钟神秀，阴阳割昏晓。荡胸生层云，决眦入归鸟。会当凌绝顶，一览众山小。"
			app:layout_constraintTop_toBottomOf="@id/iv_avatar"/>

		<TextView
			android:id="@+id/tv_blog_published"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_12"
			android:text="&#xf133;发表于 2019-06-19"
			android:textColor="@color/colorAccent"
			android:layout_marginTop="@dimen/dp_4"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginBottom="@dimen/dp_8"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_blog_content"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/tv_category_divider"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_12"
			android:text="|"
			android:textColor="@color/colorAccent"
			android:layout_marginTop="@dimen/dp_4"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginBottom="@dimen/dp_8"
			app:layout_constraintStart_toEndOf="@id/tv_blog_published"
			app:layout_constraintTop_toBottomOf="@id/tv_blog_content"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
			android:id="@+id/tv_blog_category"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/sp_12"
			android:text="&#xf114;分类 古诗词"
			android:textColor="@color/colorAccent"
			android:layout_marginTop="@dimen/dp_4"
			android:layout_marginStart="@dimen/dp_8"
			android:layout_marginBottom="@dimen/dp_8"
			app:layout_constraintStart_toEndOf="@id/tv_category_divider"
			app:layout_constraintTop_toBottomOf="@id/tv_blog_content"
			app:layout_constraintBottom_toBottomOf="parent"/>

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>